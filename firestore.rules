rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to departments for signup
    match /departments/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to all other documents for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}