rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to authenticated users
    match /tasks/{taskId}/attachments/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024 // 10MB max file size
        && request.resource.contentType.matches('(image/.*|application/pdf|text/.*|application/msword|application/vnd.*|application/x-.*)')
        && request.auth.uid != null;
      allow delete: if request.auth != null;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
